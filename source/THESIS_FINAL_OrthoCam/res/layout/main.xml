<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width  = "match_parent"
    android:layout_height = "match_parent"
>
	<View
	    android:id            = "@+id/background"
        android:background    = "@android:color/white"
        android:layout_width  = "match_parent"
        android:layout_height = "match_parent"
        android:layout_centerInParent = "true"
    />
    <TextureView
        android:id            = "@+id/textureView"
        android:layout_width  = "match_parent"
        android:layout_height = "match_parent"
        android:layout_centerInParent = "true"
    />
    <LinearLayout
        android:id            = "@+id/myLayout"
        android:layout_width  = "match_parent"
        android:layout_height = "match_parent"
        android:orientation   = "vertical"
        android:layout_centerInParent = "true"
    />
	<LinearLayout
	    android:layout_width  = "match_parent"
	    android:layout_height = "match_parent"
	    android:orientation   = "vertical"
	    android:paddingTop    = "12dp"
	>    
		<TextView
	        android:id            = "@+id/fps"
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:paddingLeft   = "12dp"
	        android:text          = "FPS: 00.0"
	        android:shadowColor   = "#000000"
            android:shadowRadius  = "2"
            android:shadowDx      = "1"
            android:shadowDy      = "1"
	    />
		<TextView
	        android:id            = "@+id/elevation"
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:paddingLeft   = "12dp"
	        android:text          = "Elevation: 00.0"
	        android:shadowColor   = "#000000"
            android:shadowRadius  = "2"
            android:shadowDx      = "1"
            android:shadowDy      = "1"
	    />
	    <ImageView
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:padding       = "8dp"
	        android:src           = "@drawable/ic_menu_preferences"
	        android:onClick       = "settingsClick"
	    />
	    <ImageView
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:padding       = "8dp"
	        android:src           = "@drawable/ic_menu_rotate"
	        android:onClick       = "orthoClick"
	    />
	    <ImageView
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:padding       = "8dp"
	        android:src           = "@drawable/ic_menu_search"
	        android:onClick       = "zoomClick"
	    />
	    <ImageView
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:padding       = "8dp"
	        android:src           = "@drawable/ic_menu_camera"
	        android:onClick       = "shootClick"
	    />
   	    <ImageView
	        android:layout_width  = "wrap_content"
	        android:layout_height = "wrap_content"
	        android:padding       = "8dp"
	        android:src           = "@drawable/ic_menu_info_details"
	        android:onClick       = "infoClick"
	    />
	</LinearLayout>
</RelativeLayout>